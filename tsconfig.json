{
    "compilerOptions": {
        "tartget": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "rootDir": "src",
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "lib",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ],
    "compileOnSave": false
}