{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "rootDir": "src",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./src/**/*"
    ],
    "compileOnSave": false
}